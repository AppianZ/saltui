.{$prefix}-carder
    background-color: $basic-100;
    &-header
        padding: 16px 16px 0;
    &-body
        padding: 16px;
        display: flex;
        &.reverse
            flex-direction: row-reverse;
        &-wrapper 
            flex: 1;
        &-image
            margin-right: 20px;
            &.reverse
                margin-right: 0;
                margin-left: 20px;
        .title
            display: flex;
            justify-content: space-between;
            font-size: 16px;
            line-height: 1.5;
        .content
            margin-top: 8px;
            font-size: 14px;
            line-height: 1.5;
            color: #9d9d9d
    &-footer
        padding: 0 16px 16px;
        border-radius: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        &-content
            color: #9d9d9d;
            font-size: 12px;
        &-actions 
            .t-button
                margin-left: 8px;
